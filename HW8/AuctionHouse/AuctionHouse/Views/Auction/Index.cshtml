@model List<AuctionHouse.Models.Bid>

@{
  ViewBag.Title = "Index";
}

<h2>Auction House</h2>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Most recent bids</h2>
      <div class="table-responsive">
        <table class="table table-striped table-hover ">

          <thead>
          <th>Item Name</th>
          <th>Bidder Name</th>
          <th>Bid Ammount</th>
          <th>Time Placed</th>
          </thead>
          @foreach (var item in Model)
          {
          <tr>
            <td>
              @item.Item.ItemName
            </td>

            <td>
              @item.Buyer.FullName
            </td>

            <td>
              @item.Price
            </td>

            <td>
              @if (item.TimePlaced.Date == DateTime.Today)
              {
                DateTime today = item.TimePlaced;
                @today.ToString("h:mm:ss tt")
              } else {@item.TimePlaced}
            </td>

          </tr>
          }
        </table>
        </div>
</div>
      <div class="col-md-6">
        @Html.ActionLink("Place a Bid", "Create", "Bids", null, new { @class = "btn btn-primary btn-lg" })
      </div>
    </div>
</div>
