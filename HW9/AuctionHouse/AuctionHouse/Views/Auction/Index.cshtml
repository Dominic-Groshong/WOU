@model List<AuctionHouse.Models.Bid>

@{
  ViewBag.Title = "Index";
}

<h2>Auction House</h2>

<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>Most recent bids</h2>
      <div class="table-responsive">
        <table class="table table-striped table-hover ">

          <thead>
            <th>Item ID</th>
          <th>Item Name</th>
          <th>Bidder Name</th>
          <th>Bid Ammount</th>
          <th>Time Placed</th>
          </thead>
          @foreach (var i in Model)
          {
            <tr>
              <td>
                @i.Item.ItemID
              </td>

              <td>
                @Html.ActionLink(i.Item.ItemName, "Details", "Items", new { id = i.Item.ItemID }, null)
              </td>

              <td>
                @i.Buyer.FullName
              </td>

              <td>
                @i.Price
              </td>

              <td>
                @if (i.TimePlaced.Date == DateTime.Today)
                {
                  DateTime today = i.TimePlaced;
                  @today.ToString("h:mm:ss tt")
                }
                else
                {@i.TimePlaced}
              </td>

            </tr>
          }
        </table>
      </div>
    </div>
    <div class="col-md-6">
      @Html.ActionLink("Place a Bid", "Create", "Bids", null, new { @class = "btn btn-primary btn-lg" })
    </div>
  </div>
</div>
